<h1 class="text-2xl font-semibold text-slate-800 mb-6">Appointments</h1>
<div class="space-y-4">
  <% @appointments.each do |appointment| %>
    <div class="bg-white shadow rounded-lg p-4 flex flex-col md:flex-row md:items-center md:justify-between">
      <div>
        <h2 class="text-lg font-semibold text-slate-800">Booking #<%= appointment.booking_number %></h2>
        <p class="text-sm text-slate-600">Doctor: <%= appointment.time_slot.doctor.name %></p>
        <p class="text-sm text-slate-600">Date: <%= appointment.time_slot.date.strftime('%A, %B %e') %> at <%= appointment.time_slot.start_time.strftime('%H:%M') %></p>
        <p class="text-sm text-slate-600">Status: <span class="font-medium"><%= appointment.status.humanize %></span></p>
      </div>
      <%= link_to "View", appointment, class: "mt-3 md:mt-0 inline-flex items-center px-3 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition text-sm" %>
    </div>
  <% end %>
</div>
