<div class="space-y-6">
  <div>
    <h1 class="text-2xl font-semibold text-slate-800"><%= @doctor.name %> availability</h1>
    <p class="text-slate-600">Specialty: <%= @doctor.specialty %></p>
  </div>

  <div class="grid gap-4 md:grid-cols-2">
    <% @time_slots.group_by(&:date).each do |date, slots| %>
      <div class="bg-white shadow rounded-lg p-4">
        <h2 class="text-lg font-semibold text-slate-800"><%= date.strftime('%A, %B %e') %></h2>
        <ul class="mt-3 space-y-2">
          <% slots.each do |slot| %>
            <li class="flex items-center justify-between text-sm text-slate-600">
              <span><%= slot.start_time.strftime('%H:%M') %> - <%= slot.end_time.strftime('%H:%M') %></span>
              <span class="font-medium text-slate-700"><%= slot.available_slots %> spots left</span>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
