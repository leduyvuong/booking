<h1 class="text-2xl font-semibold text-slate-800 mb-6">Clinics</h1>
<div class="grid gap-6 md:grid-cols-2">
  <% @clinics.each do |clinic| %>
    <div class="bg-white shadow rounded-xl p-6">
      <h2 class="text-xl font-semibold text-slate-800"><%= link_to clinic.name, clinic, class: "hover:text-blue-600" %></h2>
      <p class="text-slate-600"><%= clinic.address %></p>
      <p class="text-slate-600">Phone: <%= clinic.phone %></p>
      <p class="text-slate-600">Email: <%= clinic.email %></p>
    </div>
  <% end %>
</div>
