<div class="space-y-6">
  <section class="bg-white shadow rounded-xl p-6">
    <h1 class="text-2xl font-semibold text-slate-800"><%= @clinic.name %></h1>
    <p class="text-slate-600"><%= @clinic.address %></p>
    <p class="text-slate-600">Phone: <%= @clinic.phone %></p>
    <p class="text-slate-600">Email: <%= @clinic.email %></p>
  </section>

  <section class="bg-white shadow rounded-xl p-6">
    <h2 class="text-xl font-semibold text-slate-800 mb-4">Doctors</h2>
    <div class="grid gap-6 md:grid-cols-2">
      <% @clinic.doctors.each do |doctor| %>
        <div class="border border-slate-200 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-slate-800"><%= link_to doctor.name, doctor, class: "hover:text-blue-600" %></h3>
          <p class="text-sm text-slate-500"><%= doctor.specialty %></p>
          <p class="mt-2 text-sm text-slate-600"><%= doctor.bio %></p>
        </div>
      <% end %>
    </div>
  </section>
</div>
